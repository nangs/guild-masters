<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>HP</th>
        <th>Energy</th>
      </tr>
    </thead>
	{{#each adventurers as |adventurer|}}
		<tr>
			<td>{{name}}</td>
			<td>{{hp}}/{{max_hp}}</td>
			<td>{{energy}}/{{max_energy}}</td>
		</tr>
	{{/each}}
</table>