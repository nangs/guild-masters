<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>HP</th>
        <th>Energy</th>
        <th>State</th>
    	<th>Attack</th>
    	<th>Defense</th>
    	<th>Vision</th>
      </tr>
    </thead>
	{{#each adventurers as |adventurer|}}
		<tr>
			<td>{{name}}</td>
			<td>{{hp}}/{{max_hp}}</td>
			<td>{{energy}}/{{max_energy}}</td>
			<td>{{state}}</td>
			<td>{{attack}}</td>
			<td>{{defense}}</td>
			<td>{{vision}}</td>
		</tr>
	{{/each}}
</table>
