<p class="quest">
	Quest Description: {{description}}
	<ul>
		<li>This quest is {{state}}</li>
		<li>Difficulty: {{difficulty}}</li>
		<li>Reward: {{reward}}</li>
		{{#if adventurers}}
			<li>Adventurers: 
				{{#each adventurers as |adventurer|}}
					{{> adventurers_link}}
				{{/each}}
			</li>
		{{/if}}
	</ul>
	{{#if adventurers}}
	{{else}}
		<button type='button' class='assignQuest' id={{id}}>Assign Adventurers to this Quest</button>
	{{/if}}
</p>